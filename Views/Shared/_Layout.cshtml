<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" rel="stylesheet" media="screen" href="@Url.Content("~/Static/css/bootstrap.min.css")" />
    <link rel="stylesheet" media="screen" href="@Url.Content("~/Static/css/bootstrap-responsive.min.css")" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <link rel="stylesheet" rel="stylesheet" media="screen" href="@Url.Content("~/Static/css/nparty.css")" />
</head>
<body>
    <div class="container" style="margin-top: 15px;">
        <div class="header">
            <div class="navbar">
                <div class="navbar-inner">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>
                    <a href="/" class="brand"><img src="/Static/img/template/logoNPartyCampeonatosSmall.png" alt="M-Party Campeonatos"/></a>
			        <div class="nav-collapse collapse" id="topMenu">
				        <ul class="nav pull-right">
					        <li class="@(topMenu == 1 ? "active" : "")"><a href="@Url.Content("~/Eventos/")">Eventos</a></li>
                            <li class="@(topMenu == 2 ? "active" : "")"><a href="@Url.Content("~/Campeonatos/")">Campeonatos</a></li>
                            <li class="@(topMenu == 3 ? "active" : "")"><a href="@Url.Content("~/Jogadores/")">Jogadores</a></li>
                            @if (currentUser == null)
                            {
                                <li><a href="@Url.Content("~/Home/Login")">Login</a></li>
                            }
                            else
                            {  
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" id="loginLabel" role="button" data-toggle="dropdown">Olá, @(currentUser.Nome) <b class="caret" style="margin-top: 10px"></b></a>
                                    <ul class="dropdown-menu" aria-labelledby="loginLabel" role="menu">
                                        <li><a href="@Url.Content("~/Jogadores/Notificacoes/")">Minhas Notificações</a></li>
                                        <li><a href="@Url.Content("~/Jogadores/Detalhes/" + currentUser.Id)">Meu Perfil</a></li>
                                        <li><a href="@Url.Content("~/Jogadores/EditarMinhasInformacoes/")">Editar Minhas Informações</a></li>
                                        <li class="divider"></li>
                                        <li><a href="@Url.Content("~/Home/Logout")">Logout</a></li>
                                    </ul>
                                </li>  
                            }
				        </ul>
			        </div>
                </div>
            </div>
		</div>
    </div>
    <div class="container" id="main-wrapper">
		<div class="main-content">
             @RenderBody()
        </div>
    </div>
    <div class="container">
        <footer>
            <div class="row">
                <div class="span4">
                    <p style="float: left;">
                        © N-Party 2013 - <a href="http://www.nparty.com.br" target="_blank">www.nparty.com.br</a>
			        </p>
                    <br /><br />
                    <ul>
                        <li><a href="/Home/Sobre">Sobre</a></li>
                        <li><a href="/Home/Privacidade">Termos de Privacidade</a></li>
                        <li><a href="/Home/FAQ">FAQ</a></li>
                        <li><a href="/Home/Contato">Contato</a></li>
                    </ul>
                </div>
                <div class="span4">
                    <iframe src="//www.facebook.com/plugins/likebox.php?href=https%3A%2F%2Fwww.facebook.com%2FNParty&amp;width=370&amp;height=258&amp;colorscheme=dark&amp;show_faces=true&amp;header=false&amp;stream=false&amp;show_border=false&amp;appId=141992936007985" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:370px; height:258px;" allowTransparency="true"></iframe>
                </div>
                <div class="span4">
                    <p style="float: right;">
                        Desenvolvido e Desenhado por <b><a href="http://www.eixox.com.br/Home/Pessoas/" target="_blank">Mario Toledo</a></b><br/>
                        Idealizado e Projetado por <b>Rafael Farias</b>
                    </p>
                </div>
            </div>
		</footer>
    </div>
