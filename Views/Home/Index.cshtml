@using CampeonatosNParty.Models.Database
@model CampeonatosNParty.Models.ViewModel.HomeView
@{
    ViewBag.Title = "Index";
    Eventos pastEvent = NPartyDb<Eventos>.Instance.Query(System.Data.CommandType.Text, 
                                                    "select * from Eventos where DataEventoInicio = (select MAX(DataEventoInicio) from Eventos where DataEventoInicio < @data)",
                                                    new System.Data.SqlClient.SqlParameter("@data", DateTime.Now.ToString("yyyy-MM-dd"))).First();
}

<div class="row">
    <div class="span12">
        <div id="mainSlider" class="carousel slide">
            <div class="carousel-inner">
                <div class="item active">
                    <img src="/Static/img/slider/mariokart7.jpg" alt="Mario Kart 7">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>Mario Kart 7</h1>
                            <p class="lead">O Campeonato de Mario Kart 7 foi acirrado. Não deixe de conferir a classificação</p>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img src="/Static/img/slider/kidicarus.jpg" alt="Kid Icarus: Uprising">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>Kid Icarus: Uprising</h1>
                            <p class="lead">Muitas batalhas aconteceram em Kid Icarus: Uprising. Confira a classificação.</p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#mainSlider" data-slide="prev"><</a>
            <a class="right carousel-control" href="#mainSlider" data-slide="next">></a>
        </div>
    </div>
</div>
<div class="content-wrap">
    <div class="row">
        <div class="span6">
            <h2>Top 5 Ranking</h2>
            <table class="table table-bordered table-striped table-condensed">
                <thead>
                    <tr>
                        <th width="32"></th>
                        <th class="span2">Nome</th>
                        <th class="span2">Nick</th>
                        <th class="span1">Pontos</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (Ranking rank in Model.ranking)
                        {
                            <tr>
                                <td><img src="@rank.UrlFotoPerfil" width="32"/></td>
                                <td><a href="@Url.Content("/Jogadores/Detalhes/" + rank.IdUsuario)">@rank.NomeUsuario</a></td>
                                <td>@rank.ApelidoUsuario</td>
                                <td>@rank.Pontos</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="span3">
            <h2>Último Evento</h2>
            <img src="@pastEvent.ImagemURL"/>
            <h4>@pastEvent.Nome</h4>
            @{
                string dataEventoPassado;
                if (pastEvent.DataEventoInicio.CompareTo(pastEvent.DataEventoFim) > 0)
                {
                    dataEventoPassado = pastEvent.DataEventoInicio.ToString("dd/MM/yyyy");
                }
                else
                {
                    dataEventoPassado = pastEvent.DataEventoInicio.ToString("dd/MM/yyyy") + " a " + pastEvent.DataEventoFim.ToString("dd/MM/yyyy");
                }
                <div>Data: @dataEventoPassado</div>
            }
        </div>
        <div class="span3">
            <h2>Próximo Evento</h2>
            <img src="@pastEvent.ImagemURL" />
            <h4>@pastEvent.Nome</h4>
            @{
                string dataEventoPassado2;
                if (pastEvent.DataEventoInicio.CompareTo(pastEvent.DataEventoFim) > 0)
                {
                    dataEventoPassado2 = pastEvent.DataEventoInicio.ToString("dd/MM/yyyy");
                }
                else
                {
                    dataEventoPassado2 = pastEvent.DataEventoInicio.ToString("dd/MM/yyyy") + " a " + pastEvent.DataEventoFim.ToString("dd/MM/yyyy");
                }
                <div>Data: @dataEventoPassado2</div>
            }
        </div>
    </div>
    <div class="row">
        <div class="span12">
            <h2>Campeonatos realizados</h2>
            @{
                int gameCounter = 0;
            }
            <div id="gameCoverSlider" class="carousel slide">
                <div class="carousel-inner">
                    @foreach (JogosPorConsole[] jogosArray in Model.jogosPorConsole.Segment(5))
                    {
                        <div class="@(gameCounter == 0 ? "item active" : "item")">
                            <div class="span1" style="margin-left: 0px;"></div>
                            <div class="span10">
                                <ul class="thumbnails">
                                    @for (int i = 0; i < jogosArray.Length && jogosArray[i] != null; i++)
                                    {
                                        <li class="span2">
                                            <a class="thumbnail campeonatoDashboard" href="@Url.Content("~/Campeonatos/Detalhes/" + jogosArray[i].IdJogo)">
                                                <img data-src="holder.js/300x300" alt="@jogosArray[i].NomeJogo" src="@jogosArray[i].ImagemJogo">
                                                <h4>@jogosArray[i].NomeJogo</h4>
                                                <div class="textDescription">
                                                    <div>Console: @jogosArray[i].NomeConsole</div>
                                                </div>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class="span1"></div>
                        </div>
                        gameCounter++;
                    }
                </div>
                <a class="left carousel-control black" href="#gameCoverSlider" data-slide="prev"><</a>
                <a class="right carousel-control black" href="#gameCoverSlider" data-slide="next">></a>
            </div>
        </div>
    </div>
</div>
