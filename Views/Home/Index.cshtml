@using CampeonatosNParty.Models.Database
@model CampeonatosNParty.Models.ViewModel.HomeView
@{
    ViewBag.Title = "Index";
}

<div class="hero-unit">
    <h1>Campeonatos N-Party</h1>
    <p>This is a template for a simple marketing or informational website. It includes a large callout called the hero unit and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
    <p><a href="#" class="btn btn-primary btn-large">Learn more &raquo;</a></p>
</div>

<!-- Example row of columns -->
<div class="row">
    <div class="span4">
        
        <h2>Top 5 Ranking</h2>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Posição</th>
                    <th>Nome</th>
                    <th>Nick</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (Ranking rank in Model.ranking)
                    {
                        <tr>
                            <td>@rank.NM_Usuario</td>
                            <td>@rank.NM_Apelido</td>
                            <td>@rank.Pontos</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <p><a class="btn" href="#">Ver os detalhes &raquo;</a></p>
    </div>
    <div class="span4">
        <h2>Últimos Eventos</h2>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (tb_eventos evento in Model.eventos)
                    {
                        <tr>
                            <td>@evento.NM_Evento</td>
                            <td>@evento.Dt_Evento.ToString()</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <p><a class="btn" href="#">Ver os detalhes &raquo;</a></p>
    </div>
    <div class="span4">
        <h2>Últimos Campeonatos</h2>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody>
                 @{
                    foreach (tb_campeonatos campeonato in Model.campeonatos)
                    {
                        <tr>
                            <td>@campeonato.NM_Campeonato</td>
                            <td>@campeonato.Data_Campeonato.ToString()</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <p><a class="btn" href="#">Ver os detalhes &raquo;</a></p>
    </div>
</div>
