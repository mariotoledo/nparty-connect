@using CampeonatosNParty.Models.Database;
@using EixoX.UI
@using EixoX.Html
@model CampeonatosNParty.Models.StructModel.DadosNintendisticos
@{
    ViewBag.Title = "Dados Nintendísticos";
    EixoX.Html.BootstrapPresenter<CampeonatosNParty.Models.StructModel.DadosNintendisticos> presenter = EixoX.Html.BootstrapPresenter<CampeonatosNParty.Models.StructModel.DadosNintendisticos>.GetInstance(1046);
    bool validate = "post".Equals(Request.HttpMethod, StringComparison.OrdinalIgnoreCase);
}
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.maskedinput.min.js")"></script>
<h2>Configurações <small>Preencha as informações abaixo e clique em "Salvar" para alterar seus dados nintendísticos</small></h2>
<script>
    var isPokemonXYSelected = false;

    function gameSelected(gameId) {
        if ($('#gameId-' + gameId).prop('checked')) {
            document.getElementById("gameId-" + gameId).checked = false;
            $('#thumbId-' + gameId).css('border-color', '');
            if (gameId == 11)
                $('#PokemonFriendSafari').hide('fast');
        } else {
            $('#thumbId-' + gameId).css('border-color', '#0000FF');
            document.getElementById("gameId-" + gameId).checked = true;
            if (gameId == '11')
                $('#PokemonFriendSafari').show('fast');
        }
    }

    function loadPokemonSlot1(selectedType, selected) {
        $.ajax({
            url: "@Url.Content("~/Ajax/CarregarPokemonFriendSafariSlot1/")" + selectedType,
            success: function (json) {
                $('#PokemonSlot1').prop('disabled', false);
                var optionArray = [];
                optionArray.push('<option value="">Selecione</option>');

                $.each(json, function (i, item) {
                    if (selected == item.Id)
                        optionArray.push('<option value="' + item.Id + '" selected>' + item.Name + '</option>');
                    else
                        optionArray.push('<option value="' + item.Id + '">' + item.Name + '</option>');
                });

                $('#PokemonSlot1').html(optionArray.join(''));
            }
        });
    }
    function loadPokemonSlot2(selectedType, selected) {
        $.ajax({
            url: "@Url.Content("~/Ajax/CarregarPokemonFriendSafariSlot2/")" + selectedType,
            success: function (json) {
                $('#PokemonSlot2').prop('disabled', false);
                var optionArray = [];
                optionArray.push('<option value="">Selecione</option>');

                $.each(json, function (i, item) {
                    if (selected == item.Id)
                        optionArray.push('<option value="' + item.Id + '" selected>' + item.Name + '</option>');
                    else
                        optionArray.push('<option value="' + item.Id + '">' + item.Name + '</option>');
                });

                $('#PokemonSlot2').html(optionArray.join(''));
            }
        });
    }
    function loadPokemonSlot3(selectedType, selected) {
        $.ajax({
            url: "@Url.Content("~/Ajax/CarregarPokemonFriendSafariSlot3/")" + selectedType,
            success: function (json) {
                $('#PokemonSlot3').prop('disabled', false);
                var optionArray = [];
                optionArray.push('<option value="">Selecione</option>');

                $.each(json, function (i, item) {
                    if (selected == item.Id)
                        optionArray.push('<option value="' + item.Id + '" selected>' + item.Name + '</option>');
                    else
                        optionArray.push('<option value="' + item.Id + '">' + item.Name + '</option>');
                });

                $('#PokemonSlot3').html(optionArray.join(''));
            }
        });
    }
</script>
<div class="row">
    @{
        Html.RenderPartial("MenuConfiguracoes");
    }
    
        <form class="form" method="post">
            <div class="span8" style="padding-top: 10px;">
            @if (!EixoX.ValidationHelper.IsNullOrEmpty(ViewData["RegisterError"]))
            {
                <div class="row">
                    <div class="span8">
                        <div class="alert alert-error">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>@ViewData["RegisterError"]
                        </div>
                    </div>
                </div>
            }
            @if (!EixoX.ValidationHelper.IsNullOrEmpty(ViewData["RegisterSuccess"]))
            {
                <div class="row">
                    <div class="span8">
                        <div class="alert alert-success">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>@ViewData["RegisterSuccess"]
                        </div>
                    </div>
                </div>
            }
                <div class="row">
                    <div class="span4">
                        <div class="control-group">
                            <label class="control-label" for="MiiverseId">Miiverse Id</label>
                            <div class="controls">
                                <div class="input-prepend">
                                  <input name="MiiverseId"  type="text" id="MiiverseId" value="@Model.MiiverseId" placeholder="Insira o seu id do Miiverse"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="span4">
                        <div class="control-group">
                            <label class="control-label" for="FriendCode">Friend Code</label>
                            <div class="controls">
                                <div class="input-prepend">
                                  <input name="FriendCode"  type="text" id="FriendCode" value="@Model.FriendCode" placeholder="Insira o seu FriendCode do 3DS"/>
                                </div>
                            </div>
                        </div>                        
                    </div>
                </div>
                <p>Escolha abaixo os jogos que você possui:</p>
                <div class="row">
                    <div class="span8">
                            <div id="gamesCarousel" class="carousel slide" style="min-height: 260px;">
                                <div class="carousel-inner">
                                    @{
                                        string active = "active";
                                        foreach (Jogos[] jogosArray in Jogos.Select().Segment(4))
                                        {
                                            <div class="item @active">
                                                <div class="row">
                                                    <div class="span8">
                                                        <ul class="thumbnails">
                                                                @{
                                                                    if (jogosArray != null && jogosArray.Length > 0)
                                                                    {
                                                                        foreach (CampeonatosNParty.Models.Database.Jogos jogo in jogosArray)
                                                                        {
                                                                            if (jogo != null)
                                                                            {
                                                                                string gameId = "gameId-" + jogo.Id;
                                                                                string thumbId = "thumbId-" + jogo.Id;
                                                                                string checkedString = "none";
                                                                                string thumbBorder = "";
                                                                                if (Model.Jogos != null && Model.Jogos.Count > 0)
                                                                                {
                                                                                    foreach (PersonGame pg in Model.Jogos)
                                                                                    {
                                                                                        if (pg.GameId == jogo.Id)
                                                                                        {
                                                                                            checkedString = "checked";
                                                                                            thumbBorder = "border-color: #0000FF";
                                                                                            break;
                                                                                        }
                                                                                    }
                                                                                }
                                                                                 
                                                                                <li class="span2">
                                                                                    <a href="#" onclick="gameSelected(@jogo.Id)" class="thumbnail" id="@thumbId" style="@thumbBorder">
                                                                                        <input type="checkbox" name="@gameId" id="@gameId" @checkedString style="display: none;" />
                                                                                        @if (jogo.Id == 11 && checkedString.CompareTo("checked") == 0)
                                                                                        {
                                                                                            <script>
                                                                                                isPokemonXYSelected = true;
                                                                                            </script>
                                                                                        }
                                                                                        <img alt="" src="@jogo.getImagemUrl()">
                                                                                        <h5>@jogo.Nome</h5>
                                                                                    </a>
                                                                                </li>
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                        </ul>
                                                    </div>  
                                                </div>
                                            </div>
                                                                    active = "";
                                        }
                                    }
                                    </div>
                                    <a class="carousel-control left" href="#gamesCarousel" data-slide="prev">&lsaquo;</a>
                                    <a class="carousel-control right" href="#gamesCarousel" data-slide="next">&rsaquo;</a>
                                </div>
                        <div id="PokemonFriendSafari">
                            <p>Selecione o seu Friend Safari de Pokémon X ou Pokémon Y:</p>
                            <table class="table table-hover table-striped">
                                <tr>
                                    <th style="vertical-align: middle;">
                                        Tipo do Safari
                                    </th>
                                    <th style="vertical-align: middle;">
                                        Slot 1
                                    </th>
                                    <th style="vertical-align: middle;">
                                        Slot 2
                                    </th>
                                    <th style="vertical-align: middle;">
                                        Slot 3
                                    </th>
                                </tr>
                                <tr>
                                    <td>
                                        <select class="span2" id="PokemonType" name="PokemonType" onchange="loadPokemonSlot1(this.value, 0); loadPokemonSlot2(this.value, 0); loadPokemonSlot3(this.value, 0);">
                                            <option value="0">Selecione...</option>
                                            @{
                                                foreach (CampeonatosNParty.Models.Database.PokemonFriendSafariType pokemonType in
                                                    CampeonatosNParty.Models.Database.PokemonFriendSafariType.Select())
                                                {
                                                    string selected = "";
                                                    if(Model.friendSafari != null && Model.friendSafari.PokemonTypeId == pokemonType.Id)
                                                    {
                                                        selected = "selected";
                                                        <script>
                                                            loadPokemonSlot1('@Model.friendSafari.PokemonTypeId', '@Model.friendSafari.PokemonSlot1Id'); 
                                                            loadPokemonSlot2('@Model.friendSafari.PokemonTypeId', '@Model.friendSafari.PokemonSlot2Id'); 
                                                            loadPokemonSlot3('@Model.friendSafari.PokemonTypeId', '@Model.friendSafari.PokemonSlot3Id');
                                                        </script>
                                                    }
                                                    <option value="@pokemonType.Id" @selected>@pokemonType.TypeName</option>
                                                }
                                            }
                                            </select>
                                    </td>
                                    <td style="vertical-align: middle;">
                                        <select class="span2" id="PokemonSlot1" name="PokemonSlot1">
                                            <option value="0">Selecione...</option>
                                            <script>$('#PokemonSlot1').prop('disabled', true);</script>
                                        </select>
                                    </td>
                                    <td style="vertical-align: middle;">
                                        <select class="span2" id="PokemonSlot2" name="PokemonSlot2">
                                            <option value="0">Selecione...</option>
                                            <script>$('#PokemonSlot2').prop('disabled', true);</script>
                                        </select>
                                    </td>
                                    <td style="vertical-align: middle;">
                                        <select class="span2" id="PokemonSlot3" name="PokemonSlot3">
                                            <option value="0">Selecione...</option>
                                            <script>$('#PokemonSlot3').prop('disabled', true);</script>
                                        </select>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <script>
                            if (isPokemonXYSelected) {
                                $('#PokemonFriendSafari').show();
                            } else {
                                $('#PokemonFriendSafari').hide();
                            }
                        </script>
                    </div>
                </div>
                <div class="row">
                    <div class="span8">
                        <button type="submit" class="btn btn-primary btn-large">Salvar</button>
                    </div>
                </div>
            </div>
        </form>
</div>
<script type="text/javascript">
    jQuery(function ($) {
        $("#FriendCode").mask("9999-9999-9999");
    });
</script>
