@using CampeonatosNParty.Models.Database
@{
    ViewBag.Title = "Index";

    List<JogadoresItem> jogadores = NPartyDb<JogadoresItem>.Instance.Select().OrderBy("Pontos", EixoX.Data.SortDirection.Descending).ToList();
}

<div class="page-header">
  <h1>Jogadores <small>Confira todos os jogadores que ja participaram de nossos campeonatos</small></h1>
</div>

<div class="row">
    <div class="span12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Apelido</th>
                    <th>Estado</th>
                    <th>Pontuação</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach(JogadoresItem jogador in jogadores)
                    {
                        <tr>
                            <td>@jogador.NomeUsuario</td>
                            <td>@jogador.ApelidoUsuario</td>
                            <td>@jogador.Estado</td>
                            <td>@jogador.Pontos</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
