@using CampeonatosNParty.Models.Database
@model EixoX.Data.ClassSelectResult<JogadoresItem>
@{
    ViewBag.Title = "Index";

    List<JogadoresItem> jogadores;
    if(Model == null)
    {
        jogadores = NPartyDb<JogadoresItem>.Instance.Select().OrderBy("Pontos", EixoX.Data.SortDirection.Descending).ToList();
    }
    else
    {
        jogadores = Model.ToList();
    }
}

<div class="page-header">
  <h1>Jogadores <small>Confira todos os jogadores que ja participaram de nossos campeonatos</small></h1>
</div>
<form method="get" class="form-search pull-right">
    <div class="input-append">
        <input type="text" name="filter" placeholder="Procurar por jogador" class="search-query" style="height:24px;" value="@Request.QueryString["filter"]">
        <button class="btn btn-primary">
            <i class="icon-search icon-white"></i>
        </button>
    </div>
</form>
@{
    if (jogadores.Count > 0)
    {
        <div class="row">
            <div class="span12">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Apelido</th>
                            <th>Estado</th>
                            <th>Pontuação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach(JogadoresItem jogador in jogadores)
                            {
                                <tr>
                                    <td><a href="@Url.Content("~/Jogadores/Detalhes/" + jogador.IdUsuario)">@jogador.NomeUsuario</a></td>
                                    <td>@jogador.ApelidoUsuario</td>
                                    <td>@jogador.Estado</td>
                                    <td>@jogador.Pontos</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else{
        <div class="row">
            <div class="span12">
                <p>Nenhum evento foi encontrado.</p>
            </div>
        </div>
    }
}

