@using NParty.Admin.Usecases
@model TeamCreator
@{
    ViewBag.Title = "Novo time";
}

<ol class="breadcrumb">
    <li><a href="@Url.Content("/")">Home</a></li>
    <li><a href="@Url.Content("/ESports")">ESports</a></li>
    <li><a href="@Url.Content("/ESports/Team/")">Gerenciar times</a></li>
    <li class="active">Novo time</li>
</ol>

<h2>Novo time</h2>

<form class="form" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="TeamName">Nome do time *</label>
        <input class="form-control input-lg" name="TeamName" value="@Model.TeamName" />
    </div>

    <div class="form-group">
        <label for="TeamLogoUrl">Imagem do jogo</label>
        <input class="form-control" type="file" name="TeamLogoUrl" />
    </div>
    <a class="btn btn-default" href="@Url.Content("~/ESports/Team")">Cancelar</a>
    <button class="btn btn-primary" type="submit">Enviar</button>
</form>