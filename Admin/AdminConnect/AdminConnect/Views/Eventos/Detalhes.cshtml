@model AdminConnect.Models.Database.DetalhesEvento
@{
    ViewBag.Title = "Detalhes";
}

<h2>@Model.Nome</h2>
<div class="row">
    <div class="col-md-12">
        <img class="img-responsive" src="@Model.getCoverUrl()" />
    </div>
</div><br/>
<div class="row">
    <div class="col-md-6">
        <div class="well">
            <b>Tipo: </b> @Model.NomeTipoEvento<br/>
            <b>Local: </b>@Model.Local<br/>
            <b>Cidade: </b>@Model.NomeCidade - @Model.NomeEstado
        </div>
    </div>
</div>

