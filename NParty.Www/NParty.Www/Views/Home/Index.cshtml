@if(nintendoPosts != null && nintendoPosts.Count >= 4) {
    <!-- ================================== NINTENDO ================================== -->
    <div id="nintendo-container">
        <div class="container">
            <div class="container-header">
                <h2>
                    <span class="thin">Na</span>
                    <span class="strong">Nintendo</span>
                </h2>   
            </div>
            <div class="posts">
                <div class="row">
                    <div class="col-md-8" style="margin-bottom: 20px;">
                        <a class="hilight-article-item" href="@Url.Content("~/" + nintendoPosts[0].NPartyArticleLink)">
                            <div class="row">
                                <div class="col-md-8">
                                    <figure style="background-image: url(@nintendoPosts[0].CoverImage);"></figure>
                                </div>
                                <div class="col-md-4">
                                    <h3>@nintendoPosts[0].Title</h3>
                                    <div class="author">Por <span class="authorName">@nintendoPosts[0].Author</span> em <span class="date">@nintendoPosts[0].DatePublished.ToString("dd/MM/yyyy")</span></div>
                                    <p class="snippet">@nintendoPosts[0].Summary</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4 col-bordered-left">
                        <ul class="media-list">
                            <li class="media thumb-item"><a href="@Url.Content("~/" + nintendoPosts[1].NPartyArticleLink)"><div class="media-left media-middle"><figure class="media-object" style="background-image: url(@nintendoPosts[1].CoverImage)"></figure></div><div class="media-body"><h5 class="media-heading">@nintendoPosts[1].Title</h5><div class="time">em @nintendoPosts[1].DatePublished.ToString("dd/MM/yyyy")</div></div></a></li>
                            <li class="media thumb-item"><a href="@Url.Content("~/" + nintendoPosts[2].NPartyArticleLink)"><div class="media-left media-middle"><figure class="media-object" style="background-image: url(@nintendoPosts[2].CoverImage)"></figure></div><div class="media-body"><h5 class="media-heading">@nintendoPosts[2].Title</h5><div class="time">em @nintendoPosts[2].DatePublished.ToString("dd/MM/yyyy")</div></div></a></li>
