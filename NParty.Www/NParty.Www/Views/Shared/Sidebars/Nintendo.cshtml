@{
    List<NParty.Www.Models.Article> hilights = (List<NParty.Www.Models.Article>)ViewData["hilights"];
}
<div id="sidebar-general" class="sidebar">
    <div class="sidebar-item">
        <div class="sidebar-advertising ">
            @{Html.RenderPartial("Advertisement/ad1_sidebar");}
        </div>
    </div>
    @if (hilights != null && hilights.Count > 0)
    {
        <div class="sidebar-item" style="text-align: left;">
            <h4 class="sidebar-title">DESTAQUES</h4>
            <ul class="media-list other-posts" id="sidebar-hilights-posts">
                @foreach (NParty.Www.Models.Article hilight in hilights)
                {
                    <li class="media">
                        <a href="@hilight.ArticleLink">
                            <div class="media-left">
                                <div width="45" class="media-object media-object-img-sm" style="background-image: url('@hilight.CoverImage')" alt="@hilight.Title"></div>
                            </div>
                            <div class="media-body">@hilight.Title</div>
                        </a>
                    </li>
                }
            </ul>
        </div>
    }
    <div class="sidebar-follow sidebar-item">
        <div class="fb-page" data-href="https://www.facebook.com/nparty" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true" data-show-posts="false"><div class="fb-xfbml-parse-ignore"><blockquote cite="https://www.facebook.com/nparty"><a href="https://www.facebook.com/nparty">N-Party</a></blockquote></div></div>
    </div>
</div>