System.Configuration.ConfigurationManager.AppSettings["SiteUrl"] + Url.Content("~/Content/img/metaImages/sharer.jpg") : (metaImageIsExternal ? "" : System.Configuration.ConfigurationManager.AppSettings["SiteUrl"]) + (string)ViewData["metaImage"];

    string metaTwitterAuthor = string.IsNullOrEmpty((string)ViewData["metaTwitterAuthor"]) ?
    "@n_party" : (string)ViewData["metaTwitterAuthor"];

    string metaFacebookAuthor = string.IsNullOrEmpty((string)ViewData["metaFacebookAuthor"]) ?
    "" : (string)ViewData["metaFacebookAuthor"];


}

