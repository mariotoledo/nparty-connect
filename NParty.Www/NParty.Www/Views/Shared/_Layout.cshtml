    <script>
        $(document).ready(function () {
            var $hilights = $('#footer-hilights');

            $.ajax('@Url.Content("~/Home/GetHilightItems/")').done(function (data) {
                if (!data || data.length == 0) {
                    $hilights.html('<li>Não foi possível carregar os destaques. Tente novamente mais tarde.</li>');
                    return;
                }

                var appendable = '';

                var i = 0;

                $.each(data, function (index) {
                    appendable +=   '<li class="media thumb-item">' +
                                    '<a href="/' + data[index].NPartyArticleLink + '">' +
                                    '<div class="media-left media-middle">' +
                                    '<figure class="media-object" style="background-image: url(' + data[index].CoverImage + ')"></figure>' + 
                                    '</div><div class="media-body">' +
                                    '<h5 style="margin-bottom: 5px;" class="media-heading">' + data[index].Title + '</h5>' +
                                    '<span class="label label-default">' + data[index].Domain + '</span></div></a></li>';

                    if (index > 1)
                        return false;
                });

                $hilights.html(appendable);
            }).fail(function () {
                $hilights.html('<li>Não foi possível carregar os destaques. Tente novamente mais tarde.</li>');
            });
        });

        function subscribeEmailToNewsletter() {
            var $suscriptionEmail = $('#suscriptionEmail');
            var $btnSubscribe = $('#btnSubscribe');
            var $errorMessage = $('#subscribeErrorMessage');
            var $successMessage = $('#subscribeSuccessMessage');

            $btnSubscribe.button("loading");
            $errorMessage.hide();
            $successMessage.hide();

            $.post('@Url.Content("~/Home/SubscribeEmailToNewsletter/")', { email: $suscriptionEmail.val()}).done(function (data) {
                if (data) {
                    if (data.status == 'success') {
                        $successMessage.html(data.message);
                        $successMessage.show();
                    } else {
                        $errorMessage.html(data.message);
                        $errorMessage.show();
                    }
                } else {
                    $errorMessage.html('Ocorreu um erro inesperado. Por favor, tente novamente mais tarde');
                }

                $btnSubscribe.button("reset");
            });
        }
    </script>
