@{
    ViewBag.Title = "E3 2016 - Eletronic Enterteinment Expo";
    ViewData["metaDescription"] = "Todas as novidades da E3 2016, a maior feira de jogos eletrônicos do mundo";
    ViewData["metaImage"] = Url.Content("~/Content/img/e3/e3_3.jpg");
    ViewData["metaUrl"] = Url.Content("~/E3");
    ViewData["metaKeywords"] = new List<string>() { "E3", "Eletronic Enterteinment Expo", "Nintendo", "Sony", "Microsoft", "Zelda", "Noticias" };
}

@section Head{
    <link rel="stylesheet" href="@Url.Content("~/Content/css/e3.css")" />
    <style>
        .conferences{
            border-bottom: 5px solid #CCCCCC;
            margin-bottom: 30px;
        }
        .col-conference{
            min-height: 120px;
            border-bottom: 1px solid #CCCCCC;
            padding: 10px;
            background-color: #FFFFFF;
            text-align: center;
        }

        .col-conference img{
            margin: 0px auto 5px auto;
        }

        .col-conference a{
            font-size: 12px;
        }

        .conference-title{
            text-align: center;
        }

        .conference-title h2{
            margin-top: 10px;
        }
    </style>
}

<div class="e3">
    <section class="content-section video-section">
        <div class="pattern-overlay">
            <div class="bg" style="background-image: url(@Url.Content("~/Content/img/e3/e3_1.jpg"))">
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="logo"><img class="img-responsive" alt="20 anos de Pokémon" src="@Url.Content("~/Content/img/e3/e3-logo.png")" /></div>
                        <h3>Todas as novidades da <b>E3 2016</b>, a maior feira de jogos eletrônicos do mundo</h3>
                        <div class="share-icons">
                            <a title="Compartilhe no Facebook" href="https://www.facebook.com/sharer/sharer.php?u=@System.Configuration.ConfigurationManager.AppSettings["SiteUrl"]@(Url.Content("~/E3"))" class="share-icon" style="background-image: url('@Url.Content("~/Content/img/icons/article-share/facebook_32.png")')" onclick="javascript:window.open(this.href,
  '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;"></a>
                            <a title="Compartilhe no Twitter" href="https://twitter.com/intent/tweet?source=n_party&related=n_party&via=n_party&url=@System.Configuration.ConfigurationManager.AppSettings["SiteUrl"]@(Url.Content("~/E3"))" class="share-icon" style="background-image: url('@Url.Content("~/Content/img/icons/article-share/twitter_32.png")')" onclick="javascript:window.open(this.href,
                                                '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;"></a>
                            <a title="Compartilhe no LinkedIn" href="https://www.linkedin.com/shareArticle?mini=true&url=@System.Configuration.ConfigurationManager.AppSettings["SiteUrl"]@(Url.Content("~/E3"))" class="share-icon" style="background-image: url('@Url.Content("~/Content/img/icons/article-share/linkedin_32.png")')" onclick="javascript:window.open(this.href,
                                                '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;"></a>
                            <a title="Compartilhe no Google+" href="https://plus.google.com/share?url=@System.Configuration.ConfigurationManager.AppSettings["SiteUrl"]@(Url.Content("~/E3"))" class="share-icon" style="background-image: url('@Url.Content("~/Content/img/icons/article-share/googleplus_32.png")')" onclick="javascript:window.open(this.href,
                                                '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div>
        <div class="row-fluid conferences"> 
            <div class="col-md-4 col-bordered-right col-conference conference-title">
                <h2>Conferências</h2>
                <p>Horário de Brasília</p>
            </div>
            <div class="col-md-1 col-bordered-right col-conference">
                <a><img src="@Url.Content("~/Content/img/e3/ea_logo.png")" class="img-responsive" alt="Eletronic Arts" title="Eletronic Arts" />
                    <div>Electronic Arts</div></a>
            </div>
            <div class="col-md-1 col-bordered-right col-conference">
                <img src="@Url.Content("~/Content/img/e3/bethesda_logo.png")" class="img-responsive" alt="Bethesda" title="Bethesda" />
                <a>Bethesda</a>
            </div>
            <div class="col-md-1 col-bordered-right col-conference">
                <img src="@Url.Content("~/Content/img/e3/kawadoka_logo.png")" class="img-responsive" alt="Kadokawa Games" title="Kadokawa Games" />
                <a>Kadokawa Games</a>
            </div>
            <div class="col-md-1 col-bordered-right col-conference">
                <img src="@Url.Content("~/Content/img/e3/xbox_logo.png")" class="img-responsive" alt="Microsoft" title="Microsoft" />
                <a>Microsoft</a>
            </div>
            <div class="col-md-1 col-bordered-right col-conference">
                <img src="@Url.Content("~/Content/img/e3/pct_logo.png")" class="img-responsive" alt="PC Gaming Show" title="PC Gaming Show" />
                <a>PC Gaming Show</a>
            </div>
            <div class="col-md-1 col-bordered-right col-conference">
                <img src="@Url.Content("~/Content/img/e3/ubisoft_logo.png")" class="img-responsive" alt="Ubisoft" title="Ubisoft" />
                <a>Ubisoft</a>
            </div>
            <div class="col-md-1 col-bordered-right col-conference">
                <img src="@Url.Content("~/Content/img/e3/sony_logo.png")" class="img-responsive" alt="Sony" title="Sony" />
                <a>Sony</a>
            </div>
            <div class="col-md-1 col-conference">
                <img src="@Url.Content("~/Content/img/e3/ninteno_logo.png")" class="img-responsive" alt="Nintendo" title="Nintendo" />
                <a>Nintendo</a>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="container" style="margin-top: 30px;">
        <div class="row">
            <div class="col-md-8 inside-section" style="margin-bottom: 20px;">

            </div>
            <div class="col-md-4 col-bordered-left">
                <div class="sidebar">
                    <div class="sidebar-item">
                        <div class="sidebar-advertising ">
                            @{Html.RenderPartial("Advertisement/ad1_sidebar");}
                        </div>
                    </div>
                    <div class="sidebar-follow sidebar-item">
                        <div class="fb-page" data-href="https://www.facebook.com/nparty" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true" data-show-posts="false"><div class="fb-xfbml-parse-ignore"><blockquote cite="https://www.facebook.com/nparty"><a href="https://www.facebook.com/nparty">N-Party</a></blockquote></div></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="@Url.Content("~/Content/js/jquery.bgswitcher.js")"></script>
    <script>
    $(".bg").bgswitcher({
        images: ["@Url.Content("~/Content/img/e3/e3_1.jpg")", "@Url.Content("~/Content/img/e3/e3_2.jpg")", "@Url.Content("~/Content/img/e3/e3_3.jpg")", "@Url.Content("~/Content/img/e3/e3_4.jpg")"],
        interval: 2500
        });
    </script>
}