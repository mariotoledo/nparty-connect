@{
    ViewBag.Title = "E3 2016 - Eletronic Enterteinment Expo";
    ViewData["metaDescription"] = "Todas as novidades da E3 2016, a maior feira de jogos eletrônicos do mundo";
    ViewData["metaImage"] = Url.Content("~/Content/img/e3/e3_3.jpg");
    ViewData["metaUrl"] = Url.Content("~/E3");
    ViewData["metaKeywords"] = new List<string>() { "E3", "Eletronic Enterteinment Expo", "Nintendo", "Sony", "Microsoft", "Zelda", "Noticias" };

    List<NParty.Www.Models.Article> articles = (List<NParty.Www.Models.Article>)ViewData["articles"];
}

@section Head{
    <link rel="stylesheet" href="@Url.Content("~/Content/css/e3.css")" />
    <style>
        .conferences{
        }
        .col-conference{
            min-height: 140px;
            border-bottom: 1px solid #CCCCCC;
            padding: 5px;
            background-color: #FFFFFF;
            text-align: center;
        }

        .col-conference img{
            margin: 0px auto 5px auto;
        }

        .col-conference a{
            font-size: 12px;
            cursor: pointer;
        }

        .col-conference:hover{
            background-color: #DDDDDD;
            color: #000;
        }

        .col-conference a:hover{
            color: #000;
            background-color: #DDDDDD;
        }

        .conference-title{
            text-align: center;
        }

        .conference-title h2{
            margin-top: 10px;
        }

        .conference-name{
            height: 35px;
        }

        .video-area{
            padding: 30px 0px 30px 0px;
            background-color: #777;
            color: #FFF;
        }

        #stream{
            display: none;
        }

        #video-title{
            margin-top: 40px;
        }

        #video-description{
            max-height: 300px;
            overflow-y: auto;
        }

        .btn-close{
            color: #FFF;
        }
    </style>
}

