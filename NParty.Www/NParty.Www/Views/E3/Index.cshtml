    </div>
</div>

@section Scripts{
    <script src="@Url.Content("~/Content/js/jquery.bgswitcher.js")"></script>
    <script>
        $(".bg").bgswitcher({
            images: ["@Url.Content("~/Content/img/e3/e3_1.jpg")", "@Url.Content("~/Content/img/e3/e3_2.jpg")", "@Url.Content("~/Content/img/e3/e3_3.jpg")", "@Url.Content("~/Content/img/e3/e3_4.jpg")"],
            interval: 2500
        });

        $stream = $('#stream');
        $streamsMenu = $('#streams-menu');

        function openStream(descriptionId) {

            if (!$($stream).is(":visible")) {
                $('#e3-stream-' + descriptionId).show();
                $stream.slideDown();
            } else {
                $('.e3-stream').fadeOut();
                $('#e3-stream-' + descriptionId).fadeIn();
            }            

            goToSectionFromEl($stream);
        }

        function closeStream() {
            if ($($stream).is(":visible")) {
                $stream.slideUp(
                    function () { $('.e3-stream').hide(); }
                );
            }

            goToSectionFromEl($streamsMenu);
        }
    </script>
}