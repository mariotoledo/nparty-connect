@{
    ViewBag.Title = "Pokémon";
    ViewData["ActiveMenu"] = 1;

    ViewData["title"] = "Sorteio: Pelúcia Dragonite";
    ViewData["metaDescription"] = "Não perca a chance de concorrer a uma pelúcia da loja Dungeon Store";
    ViewData["metaImage"] = Url.Content("~/Content/img/metaImages/metaSorteioPokemon.jpg");
    ViewData["metaUrl"] = Url.Content("~/Nintendo/Pokemon/Sorteio");
    ViewData["metaKeywords"] = new List<string>() { "Pokémon", "Pokemon", "Nintendo", "Pikachu", "Timeline" };

    @section Head{
        <link rel="stylesheet" href="@Url.Content("~/Content/css/pokemon20th.css")"/>
